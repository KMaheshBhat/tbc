{
  "name": "tbc-frameworx-monorepo",
  "version": "0.1.0",
  "description": "Monorepo for TBC FRAMEWORX",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "cli:dev": "bun run --cwd apps/tbc-cli dev",
    "cli:install": "bun run --cwd apps/tbc-cli build && cd apps/tbc-cli && npm link",
    "core:build": "bun run --cwd packages/tbc-core build",
    "record-fs:build": "bun run --cwd packages/tbc-record-fs build",
    "generator:build": "bun run --cwd packages/tbc-generator build",
    "kilocode:build": "bun run --cwd packages/tbc-kilocode build",
    "goose:build": "bun run --cwd packages/tbc-goose build",
    "all:build": "bun run record-fs:build && bun run generator:build && bun run kilocode:build && bun run goose:build && bun run core:build && bun run --filter=\"@tbc-frameworx/tbc-cli\" build",
    "all:clean": "rm -rf apps/*/dist packages/*/dist",
    "node_modules:clean": "rm -rf apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "module": "index.ts",
  "type": "module"
}
